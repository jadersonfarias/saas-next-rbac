    "env:load": "dotenv -e ../../.env --",
    "build": "tsup",
    "start": "node dist/http/server.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.5.0",
    "@saas/auth": "*",
    "@saas/env": "*",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "fastify": "^5.2.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "prisma": "^6.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@saas/eslint-config": "*",
    "@saas/prettier": "*",
    "@saas/tsconfig": "*",
    "@types/node": "^20.17.24",
    "dotenv-cli": "^8.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.3"
  },
  "prisma": {
